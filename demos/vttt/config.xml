<?xml version='1.0' encoding='utf-8'?>
<widget id="ca.mckenney.robert.vttt" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>VueTicTacToe</name>
    <description>
        A simple tic-tac-toe game to demonstrate how to build an app with Vue.js
    </description>
    <author email="roebrt@mckenney.ca" href="https://robertmckenney.ca">
        Robert McKenney
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
</widget>
